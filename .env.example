# Thewavess AI Core - 環境變數配置

# ===========================================
# AI 服務 API Keys (必填)
# ===========================================
OPENAI_API_KEY=your-openai-api-key-here
GROK_API_KEY=your-grok-api-key-here

# ===========================================
# 伺服器配置
# ===========================================
PORT=8080
GIN_MODE=debug
ENVIRONMENT=development

# ===========================================
# 資料庫配置 (暫時未使用，供後續開發)
# ===========================================
# POSTGRES_DSN=postgres://thewavess:password@localhost:5432/thewavess_ai_core?sslmode=disable
# REDIS_URL=redis://localhost:6379/0
# QDRANT_URL=http://localhost:6333

# ===========================================
# JWT 認證配置 (暫時未使用)
# ===========================================
# JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
# JWT_EXPIRY_HOURS=24
# REFRESH_TOKEN_EXPIRY_HOURS=168

# ===========================================
# NSFW 內容設定
# ===========================================
NSFW_DETECTION_THRESHOLD=0.7

# ===========================================
# 對話配置
# ===========================================
# OpenAI 設定
OPENAI_MODEL=gpt-4o
OPENAI_MAX_TOKENS=800
OPENAI_TEMPERATURE=0.8

# Grok 設定 (NSFW 內容使用)
GROK_MODEL=grok-beta
GROK_MAX_TOKENS=1000
GROK_TEMPERATURE=0.9

# 場景描述設定
SCENE_DESCRIPTIONS_ENABLED=true
SCENE_MAX_LENGTH=120
SCENE_UPDATE_FREQUENCY=5

# ===========================================
# 開發/測試配置
# ===========================================
# 日誌等級
LOG_LEVEL=debug

# 測試模式（跳過某些驗證）
TEST_MODE=false