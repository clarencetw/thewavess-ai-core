# Thewavess AI Core - 環境變數配置範例
# 複製此文件為 .env 並填入您的實際設定值

# ===========================================
# 資料庫配置 (PostgreSQL)
# ===========================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_NAME=thewavess_ai_core
DB_SSLMODE=disable

# ===========================================
# AI 服務 API Keys (必填)
# ===========================================
OPENAI_API_KEY=sk-your-openai-api-key-here
GROK_API_KEY=your-grok-api-key-here

# ===========================================
# 伺服器配置
# ===========================================
PORT=8080
GIN_MODE=debug
ENVIRONMENT=development
LOG_LEVEL=debug

# ===========================================
# NSFW 內容設定 (永久開啟)
# ===========================================
NSFW_DETECTION_THRESHOLD=0.7

# ===========================================
# 對話配置
# ===========================================
# OpenAI 設定
OPENAI_MODEL=gpt-4o
OPENAI_MAX_TOKENS=800
OPENAI_TEMPERATURE=0.8

# Grok 設定 (NSFW 內容使用)
GROK_MODEL=grok-beta
GROK_MAX_TOKENS=1000
GROK_TEMPERATURE=0.9

# 場景描述設定
SCENE_DESCRIPTIONS_ENABLED=true
SCENE_MAX_LENGTH=120
SCENE_UPDATE_FREQUENCY=5

# ===========================================
# 開發/測試配置
# ===========================================
TEST_MODE=false

# ===========================================
# JWT 配置 (未來使用)
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-here